%section.book
  %h2
    = t("public-index.planner.title")
  %p
    = t("public-index.title")
  %p#loader
    %i.fa.fa-spinner.fa-spin
  .wrapper.hidden
    .input.from
      = label_tag do
        = t('journey.from.label')
      = text_field_tag :from, nil, { placeholder: I18n.t('journey.from.message') }
      %span.required-text.hidden
        Required
    
    .input.to
      = label_tag do
        = t('journey.to.label')
      = text_field_tag :to, nil, placeholder: I18n.t('journey.to.message')
      %span.required-text.hidden
        Required

    = link_to I18n.t('button.book'), '#', class: "button", id: "booking_submit"

    #from_result.hidden{"aria-live" => "assertive", hidden: "", role: "alert", class: "error-block"}
      = t('message.sorry')
      from
      = succeed "." do
        %span#place
      %p
        = link_to I18n.t('button.more'), "promotion", class: "button small secondary cta"
    
    #results.hidden
      %i.fa.fa-spinner.fa-spin

  %p.small
    = t('public-index.planner.extra')
