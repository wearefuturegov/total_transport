%section.logo
  %h1
    = @page_title

%section.hero.enquiry
  .event
  %section.section
    = render 'book'

%main.main

  / %section.section
  /   %section.heading
  /     %h4
  /       = t("public-index.title.#{Rails.configuration.x.pickup.council}")

  %section.section
    %section.features
      .icon
        =image_tag('icons/piggy.svg')
        %p
          = t('steps.step_1.info')
      .icon
        =image_tag('icons/driving.svg')
        %p
          = t('steps.step_2.info')
      .icon
        =image_tag('icons/mobile.svg')
        %p
          = t('steps.step_3.info')
          
  %section.hero.regular#step-1
    .overlay
    .event
    %section.section
      %h3
        = t('public-index.event.title')
      %p
        = t('public-index.event.info')

      %section.action
        = link_to I18n.t('button.book'), journeys_path, class: 'button cta'

  %section.hero.enquiry
    .overlay
    .event
    %section.section
      %h3
        = t('public-index.event.enquiry.title')
      %p
        = t('public-index.event.enquiry.info')

      %section.action
        = link_to I18n.t('button.enquiry'), I18n.t('button.typeform-link'), class: 'button cta'


  %section.section.info
    %h2
      = t('public-index.about.info')
    %h2
      = t('public-index.about.extra')

  %section.section
    .action
      = mail_to I18n.t('email.landing.address'), I18n.t('button.contact'), subject: I18n.t('email.landing.subject'), class: 'button cta secondary'

  %footer.psuedo-footer
    %section.section
      %ul.social
        %li
          = link_to I18n.t('social.twitter.text'), t('social.twitter.link')
        %li
          = link_to I18n.t('social.facebook.text'), t('social.facebook.link')
      %ul.credit
        %li
          = t('credit.title')
          %span
            = link_to I18n.t('credit.essex.text'), t('credit.essex.link')
          %span
            = link_to I18n.t('credit.suffolk.text'), t('credit.suffolk.link')
          %span
            = link_to I18n.t('credit.futuregov.text'), t('credit.futuregov.link')
