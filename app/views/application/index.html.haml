%section.logo
  %h1
    = @page_title
%section.hero
  %section.section.heading
    %h2
      = t("public-index.title.#{Rails.configuration.x.pickup.council}")

    %section.action
      %h4
        = t("public-index.intro.#{Rails.configuration.x.pickup.council}")
      = link_to I18n.t('button.main_book'), '#step-1', class: 'button cta'
      %p.small
        = t('button.main_book_asterisk')

%main.main
  %section.hero#step-1
    .overlay
    .event
    %section.section
      %h3
        = t('public-index.event.title')
      %p
        = t('public-index.event.info')

      %section.action
        = link_to I18n.t('button.event'), 'https://bookyourride.typeform.com/to/UDtAVE', class: 'button cta'

  %section.hero.regular
    .overlay
    .event
    %section.section
      %h3
        = t('public-index.event.regular.title')
      %p
        = t('public-index.event.regular.info')

      %section.action
        = link_to I18n.t('button.regular'), 'https://bookyourride.typeform.com/to/y0LceD', class: 'button cta'

  %section.hero.enquiry
    .overlay
    .event
    %section.section
      %h3
        = t('public-index.event.enquiry.title')
      %p
        = t('public-index.event.enquiry.info')

      %section.action
        = link_to I18n.t('button.enquiry'), 'https://bookyourride.typeform.com/to/H7i6w5', class: 'button cta'


  -# class steps was taken, so journey


  %section.section.journey
    %section.step
      %h3
        = t('steps.step_1.title')
      %p
        = t('steps.step_1.info')

    %section.step
      %h3
        = t('steps.step_2.title')
      %p
        = t('steps.step_2.info')

    %section.step
      %h3
        = t('steps.step_3.title')
      %p
        = t('steps.step_3.info')

  %section.section.info
    %h2
      = t('public-index.about.info')
    %h2
      = t('public-index.about.extra')

  %section.section
    .action
      = mail_to I18n.t('email.address'), I18n.t('button.contact'), subject: I18n.t('email.subject'), class: 'button cta secondary'

  %footer.psuedo-footer
    %section.section
      %ul.social
        %li
          = link_to I18n.t('social.twitter.text'), t('social.twitter.link')
        %li
          = link_to I18n.t('social.facebook.text'), t('social.facebook.link')
      %ul.credit
        %li
          = t('credit.title')
          %span 
            = link_to I18n.t('credit.essex.text'), t('credit.essex.link')
          %span 
            = link_to I18n.t('credit.suffolk.text'), t('credit.suffolk.link')
          %span 
            = link_to I18n.t('credit.futuregov.text'), t('credit.futuregov.link')