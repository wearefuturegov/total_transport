%label.button
  - if type == 'return'
    = journey.time_at_stop(@booking.dropoff_stop).strftime("%l:%M%P")
    - arrival_time = journey.time_at_stop(@booking.pickup_stop)
  - else
    = journey.time_at_stop(@booking.pickup_stop).strftime("%l:%M%P")
    - arrival_time = journey.time_at_stop(@booking.dropoff_stop)
  = form.radio_button journey_type, journey.id,
                      'data-arrival-time' => arrival_time.strftime("%l:%M%P"),
                      'data-arrival-date-time' => arrival_time,
                      'data-type' => type
