<script type="text/javascript">
  $(document).ready(function() {
    $('.styleGuideSec h2').click(function() {
      var parent = $(this).closest('.styleGuideSec');
      dropAcord(parent, '.styleGuideSec');
    });

    $('#contents li a').click(function() {
      var link = $(this).attr('href');
      if (!$(link).hasClass('open')) {
        dropAcord($(link), '.styleGuideSec');
      }
    });

    var glosNames = [];
    $('#glos .card h3').each(function() {
      glosNames.push($(this).html().toLowerCase());
      $(this).attr('id', 'glos-'+$(this).html().replace(/\s+/g, '-').toLowerCase());
    });

    $(glosNames).each(function(index, value) {
      $('#glos span').each(function() {
        var me = $(this),
            txt = me.html(),
            found = me.find(value).length,
            link = value.replace(/\s+/g, '-');
        regex = new RegExp('(' + value + ')(?![^(<a.*?>).]*?<\/a>)','gi');
        if (found != -1) {
          txt = txt.replace(regex, '<a href="#glos-'+link+'">$1</a>');
          me.html(txt);
        }
      });
    });

    $('#glos .card a').click(function(){
      $('#glos .card').each(function() {
        $(this).removeClass('glos_highlight').removeClass('glos_lesser').addClass('glos_lesser');
      });
      var link = $(this).attr('href');
      $(link).closest('.card').addClass('glos_highlight');

      setTimeout(function(){
        $('#glos .card').each(function() {
          $(this).removeClass('glos_highlight').removeClass('glos_lesser');
      });
      },1500);
    });

    // Detect the fonts and display in Typography
    $('#type_body').html($('body').css('font-family'));
    $('#type_header').html($('h1').css('font-family'));
    // Detect the colours and display hash in colour section
    $('#colour .card').each(function() {
      var RGB = $(this).find('.colourSqr').css('background-color');
      $(this).find('.colRGB').html(RGB);
      $(this).find('.colHex').html(rgb2hex(RGB));
    });
    //Convert RGB to Hex
    function rgb2hex(orig){
      var rgb = orig.replace(/\s/g,'').match(/^rgba?\((\d+),(\d+),(\d+)/i);
      return (rgb && rgb.length === 4) ? "#" +
      ("0" + parseInt(rgb[1],10).toString(16)).slice(-2) +
      ("0" + parseInt(rgb[2],10).toString(16)).slice(-2) +
      ("0" + parseInt(rgb[3],10).toString(16)).slice(-2) : orig;
    }
  });
  
</script>
<% end %>
